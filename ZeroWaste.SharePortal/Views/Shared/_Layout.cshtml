<head>
    @{
        Html.RenderPartial("LayoutPartials/Head");
        if (IsSectionDefined("head"))
        {
        @RenderSection("head")
        }
    }

    @*<link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.min.css" rel="stylesheet">*@
    @Bundles.RenderStylesheets()
</head>
    <body>
