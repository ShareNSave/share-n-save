@model string
@{
    var tokenHelper = new N2Bootstrap.Library.Tokens.CheckboxTokenHelper(Html.DisplayableToken());
}
@if (!tokenHelper.IsValid)
{
    @Html.Partial("InvalidToken", tokenHelper)
}
else
{
    <input type="checkbox" name="@tokenHelper.GetFormName()" value="@tokenHelper.GetValue()" />
}